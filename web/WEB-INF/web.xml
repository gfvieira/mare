<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>mare.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/ErrorPage.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/ErrorPage.jsp</location>
    </error-page>
    <error-page>
        <error-code>503</error-code>
        <location>/ErrorPage.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.SQLException</exception-type>
        <location>/ErrorPage.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.NullPointerException</exception-type>
        <location>/ErrorPage.jsp</location>
    </error-page>
    <error-page>
        <exception-type>javax.servlet.ServletException</exception-type>
        <location>/ErrorPage.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.io.IOException</exception-type>
        <location>/ErrorPage.jsp</location>
    </error-page>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>src.filtro.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <!--<filter-mapping>
        <filter-name>AuthenticationIpFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>-->
    <filter>
        <filter-name>RequestLoggingFilter</filter-name>
        <filter-class>src.filtro.RequestLoggingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>TimerFilter</filter-name>
        <filter-class>src.filtro.TimerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TimerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequestLoggingFilter</filter-name>
        <url-pattern>/LoginSig</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            /opt/tomcat/apache-tomcat-8.0.30/temp/
        </param-value>
    </context-param>
    <servlet>
        <servlet-name>Mare</servlet-name>
        <servlet-class>src.chm.Mare</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Tempo</servlet-name>
        <servlet-class>src.chm.Tempo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pdf2</servlet-name>
        <servlet-class>src.chm.pdf2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Troca</servlet-name>
        <servlet-class>src.chm.Troca</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Mares</servlet-name>
        <servlet-class>src.chm.Mares</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>src.chm.Upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadEstacao</servlet-name>
        <servlet-class>src.chm.CadEstacao</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Mare</servlet-name>
        <url-pattern>/Mare.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Tempo</servlet-name>
        <url-pattern>/Tempo.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pdf2</servlet-name>
        <url-pattern>/pdf2.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Troca</servlet-name>
        <url-pattern>/Troca.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mares</servlet-name>
        <url-pattern>/Mares.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/Upload.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadEstacao</servlet-name>
        <url-pattern>/CadEstacao.jsp</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
